        <TextBox x:Name="addRelation" HorizontalAlignment="Left" Margin="330,130,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" KeyDown="TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="236,157,0,0" TextWrapping="Wrap" Text="Add Age:" VerticalAlignment="Top" Height="22" Width="70"/>
        <TextBox x:Name="addAge" HorizontalAlignment="Left" Margin="330,157,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" KeyDown="TextChanged"/>



    </Grid>
</Window>
